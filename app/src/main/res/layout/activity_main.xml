<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdohero.gestion.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Gestion De Contact"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Time"
            android:textSize="24sp"
            android:textStyle="italic"
            android:textColor="#ff0000"
            android:fontFamily="solid"/>"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/image" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">


                    <Button
                        android:id="@+id/gestion"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="Gestion"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:background="#000"/>

                    <Button
                        android:id="@+id/callsms"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="CALL/SMS"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_margin="2dp"
                        android:background="#000"/>

                    <Button
                        android:id="@+id/camera"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="2dp"
                        android:text="Camera"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:background="#000"/>

                </TableRow>




            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
